test xo-help-2.0 {plain - formatting help structure} -body {
    HelpLarge plain
} -result {bar aloha [OPTIONS] yoyo ?jump? run...
    hawaii

    --lulu    loop
    --no-lulu Complementary alias of --lulu.

    yoyo height
    jump gate
    run  lane

snafu aloha [OPTIONS] yoyo ?jump? run...
    hawaii

    --lulu    loop
    --no-lulu Complementary alias of --lulu.

    yoyo height
    jump gate
    run  lane

tool hammer nail [OPTIONS] ?supply...?
    workbench

    --driver force
    --force  Alias of --driver.

    supply magazine

hammer nail [OPTIONS] ?supply...?
    workbench

    --driver force
    --force  Alias of --driver.

    supply magazine
}

test xo-help-2.1 {plain formatting - help structure, inverted boolean option} -body {
    HelpSmall plain
} -result {nail [OPTIONS]
    workbench

    --driver    Complementary alias of
                --no-driver.
    --force     Alias of --no-driver.
    --no-driver force
}

